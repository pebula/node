{
  "name": "nesbus",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nesbus/src",
  "projectType": "library",
  "tags": ["release"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "libs/nesbus/**/*.{ts,tsx,js,jsx}",
          "libs/nesbus/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/nesbus"],
      "options": {
        "outputPath": "coverage/libs/nesbus",
        "jestConfig": "libs/nesbus/jest.config.ts"
      }
    },
    "build": {
      "executor": "@pebula/nx-build-pipe:build",
      "options": {
        "task": {
          "type": "group",
          "composition": "sequence",
          "pipe": [
            {
              "type": "target",
              "target": "nesbus:package"
            },
            {
              "type": "target",
              "target": "nesbus:apiExtractor"
            }
          ]
        }
      }
    },
    "package": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/nesbus",
        "tsConfig": "libs/nesbus/tsconfig.lib.json",
        "main": "libs/nesbus/src/index.ts",
        "assets": ["libs/nesbus/*.md"],
        "srcRootForCompilationRoot": "libs/nesbus",
        "additionalEntryPoints": [
          "libs/nesbus/tasks/index.ts"
        ],
        "generateExportsField": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": false
      }
    },
    "apiExtractor": {
      "executor": "@pebula/nx-api-extractor:build",
      "options": {
        "buildTargetName": "package",
        "baseConfigFile": "./api-extractor.base.json"
      }
    }
  }
}
