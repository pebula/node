{
  "name": "goosetyped",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/goosetyped/src",
  "projectType": "library",
  "tags": ["release"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "libs/goosetyped/**/*.{ts,tsx,js,jsx}",
          "libs/goosetyped/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/goosetyped"],
      "options": {
        "outputPath": "coverage/libs/goosetyped",
        "jestConfig": "libs/goosetyped/jest.config.ts"
      },
      "configuration": {
        "liveDb": {
          "jestConfig": "libs/goosetyped/jest.config.livedb.js"
        }
      }
    },
    "build": {
      "executor": "@pebula/nx-build-pipe:build",
      "options": {
        "task": {
          "type": "target",
          "target": "build-package"
        }
      }
    },
    "build-package": { },
    "package": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/goosetyped",
        "tsConfig": "libs/goosetyped/tsconfig.lib.json",
        "main": "libs/goosetyped/src/index.ts",
        "assets": ["libs/goosetyped/*.md"],
        "srcRootForCompilationRoot": "libs/goosetyped"
      }
    },
    "apiExtractor": {
      "executor": "@pebula/nx-api-extractor:build",
      "options": {
        "buildTargetName": "package",
        "baseConfigFile": "./api-extractor.base.json"
      }
    }
  }
}
