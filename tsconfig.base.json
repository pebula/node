{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@pebula/*": ["libs/*"],
      "@pebula/decorate": ["libs/decorate/src/index.ts"],
      "@pebula/goosetyped": ["libs/goosetyped/src/index.ts"],
      "@pebula/nesbus": ["libs/nesbus/src/index.ts"],
      "@pebula/nx-api-extractor": ["libs/nx-api-extractor/src/index.ts"],
      "@pebula/nx-build-pipe": ["libs/nx-build-pipe/src/index.ts"],
      "@pebula/tom": ["libs/tom/src/index.ts"],
      "@pebula/touchstone": ["libs/touchstone/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
