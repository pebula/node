{
  "name": "docs-touchstone",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/docs/touchstone/src",
  "projectType": "app",
  "tags": ["docs", "api-documenter"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/docs/touchstone/**/*.{ts,tsx,js,jsx}",
          "apps/docs/touchstone/package.json"
        ]
      }
    },
    "api-documents": {
      "executor": "@pebula/nx-build-pipe:build",
      "options": {
        "task": {
          "type": "group",
          "composition": "sequence",
          "pipe": [
            {
              "type": "target",
              "target": "touchstone:build"
            },
            {
              "name": "api-documenter",
              "type": "runCommand",
              "options": {
                "command": "api-documenter generate -i ./dist/libs/touchstone -o {projectRoot}/docs/api-docs"
              }
            }
          ]
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn start",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/docs/*.(md|mdx)",
        "{projectRoot}/docs/**/*.(md|mdx)"
      ],
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "yarn build",
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "@pebula/nx-build-pipe:build",
      "options": {
        "task": {
          "type": "group",
          "composition": "sequence",
          "pipe": [
            {
              "type": "target",
              "target": "docs-touchstone:build"
            },
            {
              "name": "start",
              "type": "runCommand",
              "options": {
                "command": "yarn serve",
                "cwd": "{projectRoot}"
              }
            }
          ]
        }
      }
    },
    "gh-pages": {
      "options": {
        "taskOptions": {
          "gh-pages": {
            "args": [ "touchstone" ]
          }
        }
      }
    }
  }
}
